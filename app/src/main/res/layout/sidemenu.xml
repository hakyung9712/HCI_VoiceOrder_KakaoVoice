<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/side_sttStart"
        android:layout_width="380dp"
        android:layout_height="283dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bt_background"
        android:backgroundTint="#FFD54F"
        android:elevation="30dp"
        android:text="음성인식 시작"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/side_bt_reset"
        android:layout_width="181dp"
        android:layout_height="377dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bt_background"
        android:backgroundTint="#E57373"
        android:elevation="30dp"
        android:text="처음으로"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/side_sttStart"
        app:layout_constraintEnd_toStartOf="@+id/side_bt_back"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/side_bt_back"
        android:layout_width="180dp"
        android:layout_height="378dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bt_background"
        android:backgroundTint="#64B5F6"
        android:elevation="30dp"
        android:text="뒤로"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/side_sttStart"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="말로 하는 키오스크"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/side_bt_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>